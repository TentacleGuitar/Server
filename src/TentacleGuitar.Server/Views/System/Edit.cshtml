@model Music
@{
    ViewBag.Title = "Edit";
}

<div class="with-sidebar-wrapper">
    <section id="content-section-1">
        <div class="section-container container">
            <div class="blog-item-wrapper">
                <div class="blog-item-holder">
                    <div class="gdlr-item gdlr-blog-full">
                        <div class="gdlr-ux gdlr-blog-full-ux">
                            <article class="post type-post status-publish format-standard has-post-thumbnail hentry category-fit-row category-life-style">
                                <div class="gdlr-standard-style">
                                    <div class="gdlr-blog-content-wrapper">
                                        <div class="gdlr-blog-content-inner">
                                            <header class="post-header">
                                                <h3 class="gdlr-blog-title">@Model.Title</h3>
                                                <div class="clear"></div>
                                            </header><!-- entry-header -->

                                            <div class="gdlr-blog-content">
                                                <form asp-action="Edit" asp-controller="System" asp-route-id="@Model.Id" enctype="multipart/form-data">
                                                    <p><span class="textholder">Title</span> <input type="text" placeholder="Song name" asp-for="Title" /></p>
                                                    <p><span class="textholder">Level</span> <input type="text" placeholder="1~10" asp-for="Level" /></p>
                                                    <p><span class="textholder">Offset</span> <input type="text" placeholder="ms" asp-for="Offset" />ms</p>
                                                    <p><textarea style="height:300px; width: 500px;" asp-for="Tabular"></textarea></p>
                                                    <p><span class="textholder">Instrument</span><input type="file" name="instrument" value="1" />（*.mp3）</p>
                                                    <p><input type="submit" value="Save" /></p>
                                                </form>
                                            </div>
                                        </div> <!-- blog-content-inner -->

                                    </div> <!-- blog-content-wrapper -->
                                    <div class="clear"></div>
                                </div>
                            </article><!-- #post -->
                        </div>
                    </div>
                </div>
            </div><div class="clear"></div>
        </div>
    </section>
</div>